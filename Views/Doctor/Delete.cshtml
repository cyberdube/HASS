@model HASS_v1.Models.Doctor

<h2>Delete Doctor</h2>

    <div>
        <h4>Are you sure you want to delete this medical record?</h4>
        <div>
            <strong>Name:</strong> @Model.Name
        </div>
        <div>
            <strong>Speciality:</strong> @Model.Speciality
        </div>
        <div>
            <strong>Availability</strong> @Model.Availability
        </div>
    </div>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="DoctorId" />
    <button type="submit" class="btn btn-primary">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
