@model HASS_v1.Models.MedicalRecord

<h2>Delete Medical Record</h2>

<div>
    <h4>Are you sure you want to delete this medical record?</h4>
    <div>
        <strong>Patient ID:</strong> @Model.PatientId
    </div>
    <div>
        <strong>Diagnosis:</strong> @Model.Diagnosis
    </div>
    <div>
        <strong>Treatment:</strong> @Model.Treatment
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="MedicalRecordId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>