@model IEnumerable<HASS_v1.Models.Appointment>

<h2>My Appointments</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Doctor ID</th>
            <th>Date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model)
        {
            <tr>
                <td>@appointment.DoctorId</td>
                <td>@appointment.AppointmentDate.ToString("MM/dd/yyyy HH:mm")</td>
                <td>@appointment.Status</td>
            </tr>
        }
    </tbody>
</table>
