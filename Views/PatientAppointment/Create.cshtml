@model HASS_v1.Models.Appointment

<h2>Schedule Appointment</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="DoctorId">Select Doctor</label>
        <select asp-for="DoctorId" asp-items="ViewBag.DoctorList" class="form-control"></select>
        <span asp-validation-for="DoctorId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AppointmentDate">Appointment Date</label>
        <input asp-for="AppointmentDate" type="datetime-local" class="form-control" />
        <span asp-validation-for="AppointmentDate" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Book</button>
    <a asp-action="MyAppointments" class="btn btn-secondary">Back</a>
</form>
