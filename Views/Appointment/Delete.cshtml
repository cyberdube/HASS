@{
}



@model HASS_v1.Models.Appointment

<h2>Cancel Appointment</h2>

<div>
    <h4>Are you sure you want to cancel this appointment?</h4>
    <div>
        <strong>Patient ID:</strong> @Model.PatientId
    </div>
    <div>
        <strong>Doctor ID:</strong> @Model.DoctorId
    </div>
    <div>
        <strong>Appointment Date:</strong> @Model.AppointmentDate.ToString("MM/dd/yyyy HH:mm")
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="AppointmentId" />
    <button type="submit" class="btn btn-danger">Cancel</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>